                    <span class="form-message"></span>
                </div>
                <div class="form-group ">
                    <label for="description" class="form-label">Mô tả</label>
                    <input value="{{dataEdit.description}}" rules="required" type="text" name="description" id="description" placeholder="VD: Quốc Khánh"
                        class="form-control">
                    <span class="form-message"></span>
                </div>
                <div class="form-group ">
                    <label for="date" class="form-label">Ngày thêm</label>
                    <input value="{{dataEdit.date}}" rules="required" type="date" name="date" id="date" class="form-control"
                        placeholder="dd-mm-yyyy">
                    <span class="form-message"></span>
                </div>
