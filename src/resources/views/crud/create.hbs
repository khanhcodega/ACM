        <div class="mb-24"> 
            <button type="button" class="col-40 btn-type active" data-type="news">Tin Tức</button>
            <button type="button" class="col-40 btn-type  " data-type="nurses">Điều dưỡng</button>
            <button type="button" class="col-40 btn-type  "data-type="orders">Đơn hàng </button>
        </div>
        <div >
            <form method="post" action="/manager/create"  class="contentWrapper">
                <h3 class="heading mb-48">Tạo tin {{type}}</h3>

                <div class="form-group ">
